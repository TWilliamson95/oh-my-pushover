{
  "compilerOptions": {
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "declaration": true,
    "target": "es6", 
    "sourceMap": true,                         
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "outDir": "./dist",                          
    "rootDir": "./src",
    "strict": true,         
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "*.*",
    "tests/",
    "dist/",
    "node_modules/"
  ]
}